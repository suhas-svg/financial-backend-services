# E2E Test Environment Configuration
# This configuration matches the docker-compose-e2e.yml setup

# Service URLs (E2E Docker Compose Setup)
ACCOUNT_SERVICE_URL=http://localhost:8083
TRANSACTION_SERVICE_URL=http://localhost:8082

# Service Health Endpoints
ACCOUNT_HEALTH_ENDPOINT=/actuator/health
TRANSACTION_HEALTH_ENDPOINT=/actuator/health

# Service Timeouts (milliseconds)
ACCOUNT_STARTUP_TIMEOUT=180000
ACCOUNT_REQUEST_TIMEOUT=30000
TRANSACTION_STARTUP_TIMEOUT=180000
TRANSACTION_REQUEST_TIMEOUT=30000

# Database Configuration - Account Service (E2E Setup)
ACCOUNT_DB_HOST=localhost
ACCOUNT_DB_PORT=5434
ACCOUNT_DB_NAME=account_db_e2e
ACCOUNT_DB_USER=e2e_user
ACCOUNT_DB_PASSWORD=e2e_password

# Database Configuration - Transaction Service (E2E Setup)
TRANSACTION_DB_HOST=localhost
TRANSACTION_DB_PORT=5435
TRANSACTION_DB_NAME=transaction_db_e2e
TRANSACTION_DB_USER=e2e_user
TRANSACTION_DB_PASSWORD=e2e_password

# Database Connection Timeout
DB_CONNECTION_TIMEOUT=10000

# Redis Configuration (E2E Setup)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=e2e_redis_password
REDIS_CONNECTION_TIMEOUT=5000

# Performance Testing Configuration
CONCURRENT_USERS=10
TEST_DURATION=300
RAMP_UP_TIME=60

# Performance Thresholds
AVG_RESPONSE_TIME_THRESHOLD=500
P95_RESPONSE_TIME_THRESHOLD=1000
ERROR_RATE_THRESHOLD=0.01
THROUGHPUT_THRESHOLD=100

# Test Data Configuration
CLEANUP_AFTER_TESTS=true

# Reporting Configuration
REPORT_OUTPUT_DIR=./reports
REPORT_FORMATS=html,json,csv
INCLUDE_METRICS=true
INCLUDE_ERROR_DETAILS=true

# Timeout Configuration (milliseconds)
TEST_TIMEOUT=30000
SETUP_TIMEOUT=60000
TEARDOWN_TIMEOUT=30000
HTTP_TIMEOUT=10000
DATABASE_TIMEOUT=15000

# Logging Configuration
LOG_LEVEL=info

# Test Environment
NODE_ENV=e2e
E2E_MODE=true