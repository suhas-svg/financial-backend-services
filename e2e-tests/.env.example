# E2E Test Environment Configuration
# Copy this file to .env and adjust values as needed

# Service URLs
ACCOUNT_SERVICE_URL=http://localhost:8081
TRANSACTION_SERVICE_URL=http://localhost:8080

# Service Health Endpoints
ACCOUNT_HEALTH_ENDPOINT=/actuator/health
TRANSACTION_HEALTH_ENDPOINT=/actuator/health

# Service Timeouts (milliseconds)
ACCOUNT_STARTUP_TIMEOUT=180000
ACCOUNT_REQUEST_TIMEOUT=30000
TRANSACTION_STARTUP_TIMEOUT=180000
TRANSACTION_REQUEST_TIMEOUT=30000

# Database Configuration - Account Service
ACCOUNT_DB_HOST=localhost
ACCOUNT_DB_PORT=5432
ACCOUNT_DB_NAME=account_db
ACCOUNT_DB_USER=postgres
ACCOUNT_DB_PASSWORD=postgres

# Database Configuration - Transaction Service
TRANSACTION_DB_HOST=localhost
TRANSACTION_DB_PORT=5433
TRANSACTION_DB_NAME=transaction_db
TRANSACTION_DB_USER=postgres
TRANSACTION_DB_PASSWORD=postgres

# Database Connection Timeout
DB_CONNECTION_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_CONNECTION_TIMEOUT=5000

# Performance Testing Configuration
CONCURRENT_USERS=10
TEST_DURATION=300
RAMP_UP_TIME=60

# Performance Thresholds
AVG_RESPONSE_TIME_THRESHOLD=500
P95_RESPONSE_TIME_THRESHOLD=1000
ERROR_RATE_THRESHOLD=0.01
THROUGHPUT_THRESHOLD=100

# Test Data Configuration
CLEANUP_AFTER_TESTS=true

# Custom test users (JSON format)
# TEST_USERS=[{"username":"testuser1","password":"password123","email":"test1@example.com"}]

# Custom test accounts (JSON format)
# TEST_ACCOUNTS=[{"accountType":"CHECKING","initialBalance":1000.00,"currency":"USD"}]

# Reporting Configuration
REPORT_OUTPUT_DIR=./reports
REPORT_FORMATS=html,json,csv
INCLUDE_METRICS=true
INCLUDE_ERROR_DETAILS=true

# Timeout Configuration (milliseconds)
TEST_TIMEOUT=30000
SETUP_TIMEOUT=60000
TEARDOWN_TIMEOUT=30000
HTTP_TIMEOUT=10000
DATABASE_TIMEOUT=15000

# Logging Configuration
LOG_LEVEL=info

# Test Environment
NODE_ENV=test