# Development Environment Configuration
ENVIRONMENT=dev
VERSION=dev-latest
DOCKERFILE=Dockerfile.dev

# Application Configuration
APP_PORT=8080
METRICS_PORT=9001
DEBUG_PORT=5005
LOG_LEVEL=DEBUG

# Database Configuration
POSTGRES_DB=myfirstdb_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# Redis Configuration (optional)
REDIS_PORT=6379
REDIS_PASSWORD=redis-dev-password

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Security Configuration
JWT_SECRET=dev-secret-key-do-not-use-in-production

# JVM Configuration
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=*:5005

# Registry Configuration
REGISTRY=ghcr.io
IMAGE_NAME=account-service