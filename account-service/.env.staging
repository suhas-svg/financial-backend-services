# Staging Environment Configuration
ENVIRONMENT=staging
VERSION=staging-latest
DOCKERFILE=Dockerfile

# Application Configuration
APP_PORT=8080
METRICS_PORT=9001
LOG_LEVEL=INFO

# Database Configuration
POSTGRES_DB=myfirstdb_staging
POSTGRES_USER=postgres
POSTGRES_PASSWORD=staging-postgres-password-change-me
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=staging-redis-password-change-me

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=staging-grafana-password-change-me

# Security Configuration
JWT_SECRET=staging-jwt-secret-change-me-to-secure-value

# JVM Configuration
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -XX:+UseG1GC -XX:+UseStringDeduplication

# Registry Configuration
REGISTRY=ghcr.io
IMAGE_NAME=account-service