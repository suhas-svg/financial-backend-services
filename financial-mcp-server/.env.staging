# Staging Environment Configuration
# MCP Server Configuration
HOST=0.0.0.0
PORT=8082
DEBUG=false

# Service URLs (staging environment)
ACCOUNT_SERVICE_URL=http://account-service-staging:8080
TRANSACTION_SERVICE_URL=http://transaction-service-staging:8081

# Authentication (staging secret - should be injected via secrets)
JWT_SECRET=${JWT_SECRET}

# HTTP Client Configuration
HTTP_TIMEOUT=8000
MAX_RETRIES=3
RETRY_DELAY=1.5

# Circuit Breaker Configuration
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=60

# Staging Database
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}

# Redis for staging
REDIS_URL=${REDIS_URL}
REDIS_ENABLED=true

# Staging specific settings
RELOAD_ON_CHANGE=false
CORS_ENABLED=true
CORS_ORIGINS=https://staging.financial-app.com,https://staging-admin.financial-app.com

# Performance settings
WORKER_PROCESSES=2
MAX_CONNECTIONS=100
KEEPALIVE_TIMEOUT=65