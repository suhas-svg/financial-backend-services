# Production Environment Configuration
# MCP Server Configuration
HOST=0.0.0.0
PORT=8082
DEBUG=false

# Service URLs (production environment)
ACCOUNT_SERVICE_URL=http://account-service:8080
TRANSACTION_SERVICE_URL=http://transaction-service:8081

# Authentication (production secret - must be injected via secrets)
JWT_SECRET=${JWT_SECRET}

# HTTP Client Configuration
HTTP_TIMEOUT=5000
MAX_RETRIES=3
RETRY_DELAY=2.0

# Circuit Breaker Configuration (strict for production)
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Rate Limiting (strict for production)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Production Database
DB_HOST=${DB_HOST}
DB_PORT=5432
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}

# Redis for production
REDIS_URL=${REDIS_URL}
REDIS_ENABLED=true

# Production specific settings
RELOAD_ON_CHANGE=false
CORS_ENABLED=true
CORS_ORIGINS=https://financial-app.com,https://admin.financial-app.com

# Performance settings (optimized for production)
WORKER_PROCESSES=4
MAX_CONNECTIONS=200
KEEPALIVE_TIMEOUT=75

# Security settings
SECURE_HEADERS=true
HSTS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'

# Backup and maintenance
BACKUP_ENABLED=true
MAINTENANCE_WINDOW=02:00-04:00